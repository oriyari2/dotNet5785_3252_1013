<Window x:Class="PL.ManagerChooseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ManagerChooseWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Select the screen you want to enter" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="115" Width="205" FontSize="25">
                    <TextBlock Text="manager&#xA;screen" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
            </Grid>

            <Grid Grid.Column="1">
                <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="115" Width="205" FontSize="25">
                    <TextBlock Text="Volunteer&#xA;screen" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>

</Window>
