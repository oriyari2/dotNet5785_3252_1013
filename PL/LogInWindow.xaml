<Window x:Class="PL.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Title="LogInWindow" Height="450" Width="500">
    <Grid >
        <Grid.RowDefinitions>
            <!-- Defines rows for different input fields and buttons -->
            <RowDefinition Height="1.6*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Label Content="Welcome to Oref Eitan" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize ="32" Height="116" Width="356" />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Label Content="ID:              " HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="20" />
            </Grid>
            <Grid Grid.Column="1">
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding CurrentId, Mode=TwoWay}" VerticalAlignment="Center" Width="150" Height="25"  TextChanged="TextBox_TextChangedId" />
            </Grid>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Label Content="Password:  " HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20"/>
            </Grid>
            <Grid Grid.Column="1">
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding CurrentPassword, Mode=TwoWay}"
                         VerticalAlignment="Center" Width="150" Height="25" TextChanged="TextBox_TextChangedpass" Margin="-1,0,0,0"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="4">
            <Button Content="Log In" FontSize="20" HorizontalAlignment="center" VerticalAlignment="Center" Click="btnLogIn_Click" Width="170" Height="35"  />
        </Grid>
        <Image HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Width="150" Source="/newImage.png" />
    </Grid>
</Window>
