<Window x:Class="PL.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Title="LogInWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Defines rows for different input fields and buttons -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Label Content="Welcome to Oref Eitan" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize ="32" Height="116" Width="356" Margin="232,30,0,0"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Label Content="ID:    " HorizontalAlignment="Right" Margin="0,10,44,7"/>
            </Grid>
            <Grid Grid.Column="1">
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding CurrentId, Mode=TwoWay}" VerticalAlignment="Center" Width="120"  TextChanged="TextBox_TextChangedId" Margin="-1,0,0,0"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Label Content="Password: " HorizontalAlignment="Left" VerticalAlignment="Center" Margin="299,0,0,0"/>
            </Grid>
            <Grid Grid.Column="1">
                <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding CurrentPassword, Mode=TwoWay}"
                         VerticalAlignment="Center" Width="120"  TextChanged="TextBox_TextChangedpass" Margin="-1,0,0,0"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="4">
            <Button Content="Log In" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnLogIn_Click" Width="106" Margin="359,0,0,0" />
        </Grid>
    </Grid>
</Window>
