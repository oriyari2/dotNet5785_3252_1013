<Window x:Class="PL.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:PL"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Loaded="MainWindow_Loaded"
    Closed="MainWindow_Closed"
    Background="#F2F4F7">
    <Grid>
        <!-- Column definitions for layout. First column is narrower than the second. -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="1.8*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <!-- First column with buttons for handling different tasks -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />

            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="4.5*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label Content="calls amount:" FontWeight="Bold" HorizontalAlignment="Center"  VerticalAlignment="Center" />
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Pending:" Width="150" FontWeight="Bold" />
                            <TextBlock Text="{Binding CallAmounts[0]}" Width="50" HorizontalAlignment="Right" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="InProgress:" Width="150" FontWeight="Bold" />
                            <TextBlock Text="{Binding CallAmounts[1]}" Width="50" HorizontalAlignment="Right" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Completed:" Width="150" FontWeight="Bold" />
                            <TextBlock Text="{Binding CallAmounts[2]}" Width="50" HorizontalAlignment="Right" />
                        </StackPanel>
                        <!-- הוסף שורות נוספות עבור סטטוסים נוספים במידת הצורך -->
                    </StackPanel>


                </Grid>

            </Grid>


            <!-- Button to reset the database. -->
            <Button Content="Reset DB" Click="btnReset_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="51" Grid.Row="1"/>

            <!-- Button to initialize the database. -->
            <Button Content="Intialize DB" Click="btnIntialize_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="51" Grid.Row="2"/>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!-- Button to handle the volunteer list. -->
            <Button Content="Handle Volunteers" Click="btnVolunteers_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="51" Grid.Row="1"/>

            <!-- Button to handle calls. -->
            <Button Content="Handle Calls" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="51" Grid.Row="2"/>
            <Border BorderBrush="Black" BorderThickness="1">
                <Label Content="simulator area"/>
            </Border>

        </Grid>

        <!-- Second column with additional controls for time and risk range -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <!-- Display the current time (bound to CurrentTime property). -->
            <Label Content="{Binding CurrentTime}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" />

            <!-- Button to add one minute to the current time. -->
            <Button Content="Add one Minute" Click="btnAddOneMinute_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Width="150" Height="27"/>

            <!-- Button to add one hour to the current time. -->
            <Button Content="Add one Hour" Click="btnAddOneHour_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Width="150" Height="27"/>

            <!-- Button to add one day to the current time. -->
            <Button Content="Add one Day" Click="btnAddOneDay_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3" Width="150" Height="27"/>

            <!-- Button to add one month to the current time. -->
            <Button Content="Add one Month" Click="btnAddOneMonth_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" Width="150" Height="27"/>

            <!-- Button to add one year to the current time. -->
            <Button Content="Add one Year" Click="btnAddOneYear_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="5" Width="150" Height="27"/>

            <!-- Grid for Risk Range input and Update button -->
            <Grid Grid.Row="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- Button to update the risk range. -->
                <Button Grid.Column="2" Content="Update" Click="btnUpdateRiskRange_Click" HorizontalAlignment="Left" 
                        VerticalAlignment="Center" RenderTransformOrigin="-0.346,0.465" Margin="10,0,0,0" FontSize="14"/>

                <!-- TextBox for the user to enter a risk range. -->
                <TextBox Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding CurrentRiskRange}"
                         FontSize="17" VerticalAlignment="Center" TextChanged="TextBox_TextChanged" />

                <!-- Label prompting user to enter a risk range. -->
                <Label Content="Enter Risk Range: " HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
