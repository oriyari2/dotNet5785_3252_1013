<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="LogInWindow.xaml">
    <Application.Resources>
        <!-- Collection for call types -->
        <!-- This resource provides a predefined collection of call types for data binding. -->
        <local:CallTypeCollection x:Key="CallTypeCollectionKey"/>


        <!-- Collection for status types -->
        <!-- This resource provides a predefined collection of status types for data binding. -->
        <local:StatusCollection x:Key="StatusCollectionKey"/>

        <!-- Converter for double values. -->
        <!-- This converter is used to handle double values in the UI. -->
        <local:DoubleConverter x:Key="DoubleConverterkey" />

        <!-- Converter to check if an object is not null -->
        <!-- This converter is used to convert non-null objects to boolean values. -->
        <local:IsNotNullToBoolConverter x:Key="IsNotNullToBoolConverterkey" />

        <!-- Converter to enable/disable select elements -->
        <!-- This converter is used to enable or disable selection UI elements based on conditions. -->
        <local:IsEnabledSelectConverter x:Key="IsEnabledSelectConverterkey" />

        <!-- Collection for role types -->
        <!-- This resource provides a predefined collection of role types for data binding. -->
        <local:RoleTypeCollection x:Key="RoleTypeCollectionKey"/>

        <!-- Collection for distance types -->
        <!-- This resource provides a predefined collection of distance types for data binding. -->
        <local:DistanceTypeCollection x:Key="DistanceTypeCollectionKey"/>

        <!-- Converter for object ID to true/false -->
        <!-- This converter enables or disables UI elements based on the presence of an object ID. -->
        <local:ConvertObjIdToTF x:Key="ConvertObjIdToTFkey" />

        <!-- Converter for role type to true/false -->
        <!-- This converter enables or disables UI elements based on the role type. -->
        <local:ConvertRoleToTF x:Key="ConvertRoleToTFkey" />

        <!-- Converter for object password to true/false -->
        <!-- This converter enables or disables password-related UI elements based on conditions. -->
        <local:ConvertObjPasswordToTF x:Key="ConvertObjPasswordToTFkey" />

        <!-- Converter for call progress -->
        <!-- This converter is used to display the call progress status in the UI. -->
        <local:CallInProgressConverter x:Key="CallInProgressConverterkey" />

        <!-- Converter for formatting DateTime values -->
        <!-- This converter is used to format DateTime objects in the UI. -->
        <local:DateTimeFormatConverter x:Key="DateTimeFormatConverterkey" />

        <!-- Converter for converting TimeSpan to string -->
        <!-- This converter is used to format TimeSpan objects as strings for display in the UI. -->
        <local:TimeSpanToStringConverter x:Key="TimeSpanToStringConverterkey" />

        <!-- Converter for opening time formatting -->
        <!-- This converter is used to format opening times in the UI. -->
        <local:OpeningTimeConverter x:Key="OpeningTimeConverterkey" />

        <!-- Converter for active checkbox state -->
        <!-- This converter is used to manage checkbox states in the UI based on specific conditions. -->
        <local:ActiveCheckboxConverter x:Key="ActiveCheckboxConverterkey" />

        <local:SimulatorStatusConverter x:Key="SimulatorStatusConverterkey"/>

        <local:SimulatorEnableConverter x:Key="SimulatorEnableConverterkey"/>

        <local:CoordinatesValidationConverter x:Key="CoordinatesValidationConverterkey"/>

        <local:BorderThicknessConverter x:Key="BorderThicknessConverterkey"/>
        

        <!-- Default style for buttons -->
        <!-- This style defines the default appearance for all buttons in the application. -->
        <Style TargetType="Button">
            <!-- Set button background color -->
            <Setter Property="Background"  Value="#A3C77F" />
            <!-- Set button foreground (text) color -->
            <Setter Property="Foreground" Value="#0D1821" />
        </Style>

        <!-- Default style for labels -->
        <!-- This style defines the default appearance for all labels in the application. -->
        <Style TargetType="Label">
            <!-- Set label foreground (text) color -->
            <Setter Property="Foreground" Value="#0D1821" />
            <!-- Set font size -->
            <Setter Property="FontSize" Value="15" />
            <!-- Make text bold -->
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!-- Default style for windows -->
        <!-- This style defines the default appearance for all windows in the application. -->
        <Style TargetType="Window">
            <!-- Set window background color -->
            <Setter Property="Background" Value="#F2F4F7" />
        </Style>
    </Application.Resources>
</Application>

